<div class="container">
  <div class="messages-container">
    <div id="messages" data-booking-id="<%= @booking.id %>">
      <% @booking.messages.each do |message| %>
        <%= render "message", message:message %>
      <% end %>
    </div>
    
    <%= simple_form_for [ @booking, @message ] do |f| %>
        <%= f.input :content, label: false, placeholder: "Message" %>
        <%= f.submit 'Go!', class: 'btn btn-primary btn-circle btn-msg' %>
    <% end %>
    
  </div>
</div>
