<% if @sport.users.empty? %>
  <p>No players yet.</p>
<% else %>
  <% @sport.users.each do |user| %>
    <div class="container-fluid py-2">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://cdn.pixabay.com/photo/2015/01/26/22/40/child-613199_960_720.jpg" alt="Card image">
        <div class="card-body">
          <p><%= user.first_name %> <%= user.last_name %></p>
          <p><%= user.location %></p>
          <p><% user.sports.each do |sport| %></p>
            <p><%= sport.name %></p>
          <% end%>
          <p> Availability will go here </p>
        </div>
      </div>
    </div>
  <% end%>
<% end%>
